<!-- The contents of this file will be loaded for each web application -->
<!-- dont lock resources to permit hot redeploy of servlets -->
<Context antiResourceLocking="true" reloadable="true" privileged="true" >
    <!-- TODO SR ENV DEV: Limit access to SLC user and DEV server CIDRs. Note: does not include PROD, .220, CIDR. -->
    <!-- <Valve className="org.apache.catalina.valves.RemoteAddrValve" allow="192\.168\.22[1236]\.[0-9]+|::1|0:0:0:0:0:0:0:1" /> -->
    <Manager sessionAttributeValueClassNameFilter="java\.lang\.(?:Boolean|Integer|Long|Number|String)|org\.apache\.catalina\.filters\.CsrfPreventionFilter\$LruCache(?:\$1)?|java\.util\.(?:Linked)?HashMap"/>


    <!-- Default set of monitored resources. If one of these changes, the    -->
    <!-- web application will be reloaded.                                   -->
    <!-- <WatchedResource>WEB-INF/web.xml</WatchedResource> -->
    <!-- <WatchedResource>WEB-INF/tomcat-web.xml</WatchedResource> -->
    <!-- <WatchedResource>${catalina.base}/conf/web.xml</WatchedResource> -->

    <!-- Uncomment this to disable session persistence across Tomcat restarts -->
    <!--
    <Manager pathname="" />
    -->

    <!-- Server-specific setting denoting tdw_config dir. Just sharing param name of "reststop" runmanager for now. package local dev config. -->
    <Parameter name="reststop.config.dir" value="${CATALINA_BASE}/tdw_config" override="false" />
</Context>
